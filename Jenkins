pipeline{
    agent any
    stages{
        stage('Preparation'){
            steps{
                bat 'mvn clean'
            }
        }
        stage('Test'){
            steps{
                bat 'mvn test'
            }
        }
        stage('Package'){
            steps{
                bat 'mvn package'
            }
        }
        stage('Caputre Results'){
            steps{
                input('Do you want to capture results?')
                junit '**/target/surefire-reports/TEST-*.xml'
                archiveArtifacts 'target/*.jar'
            }
        }
        stage('Email Status'){
            steps{
                mail body:"$(env.JOB_NAME) - $(env.BUILD_NUMBER) : [${currentBuild.currentResult}]\n\nThe Console Output is at ${env.BUILD_URL}", to:"arunmathew1712@gmail.com"
            }
        }
    }
}